<FrameLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	>

	<android.support.v7.widget.CardView
		android:id="@+id/es_card_root_view"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		style="@style/EmbeddedSocialSdkCardViewStyle"
		>

		<RelativeLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:paddingBottom="@dimen/es_card_shadow_space"
			>

			<android.widget.Space
				android:id="@+id/es_leftBorder"
				android:layout_width="@dimen/es_padding_large"
				android:layout_height="@dimen/es_user_icon_size"
				/>

			<include layout="@layout/es_view_topic"/>

		</RelativeLayout>

	</android.support.v7.widget.CardView>
</FrameLayout>
