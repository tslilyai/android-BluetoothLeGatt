<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:minHeight="@dimen/es_list_default_height"
	android:orientation="vertical"
	android:paddingLeft="@dimen/es_padding_large"
	android:paddingRight="@dimen/es_padding_large"
	>

	<TextView
		android:id="@+id/es_account_name"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_centerVertical="true"
		android:layout_toLeftOf="@+id/es_account_state"
		android:singleLine="true"
		android:textColor="?attr/es_textColorSecondary"
		android:textSize="16dp"
		/>

	<android.support.v7.widget.SwitchCompat
		android:id="@+id/es_account_state"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentRight="true"
		android:layout_centerVertical="true"
		/>

</RelativeLayout>