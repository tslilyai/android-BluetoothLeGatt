<RelativeLayout
	android:id="@+id/es_comment_root"
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	>

	<android.widget.Space
		android:id="@+id/es_leftBorder"
		android:layout_width="@dimen/es_padding_xlarge"
		android:layout_height="@dimen/es_user_icon_size"
		/>

	<include
		layout="@layout/es_view_user_header"/>

	<include
		layout="@layout/es_view_comment"/>

	<View
		android:id="@+id/es_dividerLayoutBottom"
		style="@style/EmbeddedSocialSdkDivider"
		android:layout_below="@id/es_buttonsLayout"
		android:layout_marginTop="@dimen/es_padding_base"/>

</RelativeLayout>