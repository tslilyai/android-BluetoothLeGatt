<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/es_bottomBar"
        android:background="?attr/es_contentBackground"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        tools:ignore="MissingPrefix">

    <View
            style="@style/EmbeddedSocialSdkDivider"
            android:layout_gravity="top"/>

    <Button
            android:id="@+id/es_doneButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/es_menu_done"
            android:layout_gravity="right"
            style="@style/EmbeddedSocialSdkBottomButton"
    />

</FrameLayout>
