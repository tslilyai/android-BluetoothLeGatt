<resources
	xmlns:tools="http://schemas.android.com/tools"
	tools:ignore="ResourceName"
	>

	<style name="EmbeddedSocialSdkAppTheme.Stub" parent="Theme.AppCompat.NoActionBar">
		<item name="android:windowActionBar">false</item>
		<item name="android:windowNoTitle">true</item>
	</style>

	<style name="EmbeddedSocialSdkThemeOverlayBaseFragment">
		<item name="es_listItemBackground">?attr/es_buttonBackground</item>
	</style>

	<style name="EmbeddedSocialSdkThemeOverlayContentFragment">
		<item name="es_recyclerViewBackground">?attr/es_contentBackground</item>
		<item name="es_baseContentLayout">@layout/es_content_view</item>
		<item name="es_baseContentViewId">@id/es_recyclerView</item>
	</style>

	<style name="EmbeddedSocialSdkThemeOverlayFeed">
		<item name="es_recyclerViewBackground">?attr/es_topicFeedBackground</item>
	</style>

	<style name="EmbeddedSocialSdkThemeOverlayTopic"/>

	<style name="EmbeddedSocialSdkNavigationItem">
		<item name="android:minHeight">48dp</item>
		<item name="android:background">?attr/es_navigationItemBackground</item>
		<item name="android:gravity">center_vertical</item>
		<item name="android:paddingLeft">@dimen/es_navigation_hor_padding</item>
		<item name="android:paddingRight">@dimen/es_navigation_hor_padding</item>
	</style>

	<style name="EmbeddedSocialSdkToolbarStyleImage">
		<item name="android:theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
		<item name="android:background">@android:color/transparent</item>
	</style>

	<style name="EmbeddedSocialSdkSearchViewStyle" parent="Widget.AppCompat.SearchView">
		<item name="queryBackground">@null</item>
		<item name="submitBackground">@null</item>
		<item name="searchHintIcon">@null</item>
		<item name="defaultQueryHint">@string/abc_search_hint</item>
		<item name="searchIcon">@null</item>
		<item name="layout">@layout/abc_search_view</item>
		<item name="closeIcon">@drawable/abc_ic_clear_material</item>
		<item name="goIcon">@drawable/abc_ic_go_search_api_material</item>
		<item name="voiceIcon">@drawable/abc_ic_voice_search_api_material</item>
		<item name="commitIcon">@drawable/abc_ic_commit_search_api_mtrl_alpha</item>
		<item name="suggestionRowLayout">@layout/abc_search_dropdown_item_icons_2line</item>
	</style>

	<!-- TODO: made light and dark variants -->
	<style name="EmbeddedSocialSdkEditTextStyle" parent="Base.Widget.AppCompat.EditText">
		<item name="android:textColor">?attr/es_textColorPrimary</item>
		<item name="android:textColorHint">?attr/es_textColorHint</item>
		<item name="android:cursorVisible">true</item>
		<item name="android:textCursorDrawable">?attr/es_cursorDrawable</item>
	</style>

	<style name="EmbeddedSocialSdkButton" parent="EmbeddedSocialSdkTextCaption.Green">
		<item name="android:gravity">center</item>
		<item name="android:background">?attr/es_buttonBackground</item>
		<item name="android:paddingBottom">12dp</item>
		<item name="android:paddingTop">12dp</item>
		<item name="android:paddingLeft">10dp</item>
		<item name="android:paddingRight">10dp</item>
	</style>

	<style name="EmbeddedSocialSdkButton.Large">
		<item name="android:textSize">16dp</item>
		<item name="android:textStyle">normal</item>
	</style>

	<style name="EmbeddedSocialSdkBoundedButton" parent="EmbeddedSocialSdkTextCaption.Green">
		<item name="android:gravity">center</item>
		<item name="android:minWidth">82dp</item>
		<item name="android:minHeight">32dp</item>
		<item name="android:layout_marginLeft">10dp</item>
	</style>

	<style name="EmbeddedSocialSdkBoundedButton.Small">
		<item name="android:minHeight">22dp</item>
	</style>

	<style name="EmbeddedSocialSdkBoundedButton.Green">
		<item name="android:background">@drawable/es_button_green</item>
		<item name="android:textColor">@color/es_button_text_green</item>
	</style>

	<style name="EmbeddedSocialSdkBoundedButton.Completed">
		<item name="android:background">@drawable/es_button_green_completed</item>
		<item name="android:textColor">@color/es_button_completed_text</item>
	</style>

	<style name="EmbeddedSocialSdkTextHead">
		<item name="android:textColor">?attr/es_textColorPrimary</item>
		<item name="android:textSize">@dimen/es_text_head</item>
		<item name="android:textStyle">bold</item>
	</style>

	<style name="EmbeddedSocialSdkTextSubhead">
		<item name="android:textSize">@dimen/es_text_subhead</item>
		<item name="android:textColor">?attr/es_textColorPrimary</item>
	</style>

	<style name="EmbeddedSocialSdkTextSubhead.Green">
		<item name="android:textSize">@dimen/es_text_body2</item>
		<item name="android:textColor">@color/es_text_green</item>
	</style>

	<style name="EmbeddedSocialSdkTextBody2">
		<item name="android:textSize">@dimen/es_text_body2</item>
		<item name="android:textColor">?attr/es_textColorSecondary</item>
	</style>

	<style name="EmbeddedSocialSdkTextCaption">
		<item name="android:textSize">@dimen/es_text_caption</item>
		<item name="android:textColor">?attr/es_textColorSecondary</item>
	</style>

	<style name="EmbeddedSocialSdkTextCaption.Green">
		<item name="android:textColor">@color/es_text_green</item>
		<item name="android:textAllCaps">true</item>
		<item name="android:singleLine">true</item>
		<item name="android:textStyle">bold</item>
		<item name="android:paddingLeft">@dimen/es_padding_base</item>
		<item name="android:paddingRight">@dimen/es_padding_base</item>
	</style>

	<style name="EmbeddedSocialSdkCardViewStyle">
		<item name="android:layout_marginBottom">@dimen/es_padding_card_vertical</item>
		<item name="android:layout_marginLeft">@dimen/es_padding_card_horizontal</item>
		<item name="android:layout_marginRight">@dimen/es_padding_card_horizontal</item>
		<item name="android:layout_marginTop">@dimen/es_padding_card_vertical</item>
		<item name="cardCornerRadius">1dp</item>
		<item name="cardElevation">@dimen/es_card_shadow_size</item>
		<item name="cardBackgroundColor">?attr/es_cardBackground</item>
	</style>

	<style name="EmbeddedSocialSdkGreenTextStyle">
		<item name="android:textColor">@color/es_text_green</item>
		<item name="android:textSize">16dp</item>
	</style>

	<style name="EmbeddedSocialSdkTabsStyle">
		<item name="android:colorForeground">?attr/es_tabsBottomLineColor</item>
	</style>

	<style name="EmbeddedSocialSdkSecondaryTextStyle">
		<item name="android:textColor">?attr/es_textColorHint</item>
		<item name="android:textSize">16dp</item>
	</style>

	<style name="EmbeddedSocialSdkContentErrorMessage">
		<item name="android:textColor">?attr/es_textColorSecondary</item>
		<item name="android:textSize">14dp</item>
		<item name="android:padding">16dp</item>
	</style>

	<style name="EmbeddedSocialSdkSignInButton">
		<item name="android:orientation">horizontal</item>
		<item name="android:layout_gravity">center_horizontal</item>
		<item name="android:padding">4dp</item>
		<item name="android:layout_margin">5dp</item>
	</style>

	<style name="EmbeddedSocialSignInImage">
		<item name="android:layout_margin">4dp</item>
	</style>

	<style name="EmbeddedSocialSignInText">
		<item name="android:layout_width">150dp</item>
		<item name="android:layout_height">match_parent</item>
		<item name="android:textSize">14dp</item>
		<item name="android:textStyle">bold</item>
		<item name="android:layout_margin">8dp</item>
		<item name="android:textColor">@color/es_white</item>
		<item name="android:gravity">center_vertical</item>
	</style>

	<style name="EmbeddedSocialSdkDivider">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">1px</item>
		<item name="android:background">?attr/es_dividerColor</item>
	</style>

	<style name="EmbeddedSocialSdkDivider.Tablet">
		<item name="android:layout_width">0dp</item>
		<item name="android:layout_weight">1</item>
	</style>

	<style name="EmbeddedSocialSdkOptionsItem">
		<item name="android:singleLine">true</item>
		<item name="android:layout_width">0dp</item>
		<item name="android:background">?attr/es_listItemBackground</item>
		<item name="android:layout_height">58dp</item>
		<item name="android:textSize">16dp</item>
		<item name="android:textColor">?attr/es_textColorSecondary</item>
		<item name="android:gravity">center_vertical</item>
	</style>

	<style name="EmbeddedSocialSdkOptionsItem.Phone">
		<item name="android:layout_width">match_parent</item>
		<item name="android:paddingRight">@dimen/es_profile_margin_text</item>
		<item name="android:paddingLeft">@dimen/es_profile_margin_text</item>
	</style>

	<style name="EmbeddedSocialSdkOptionsHeader" parent="EmbeddedSocialSdkGreenTextStyle">
		<item name="android:textColor">@color/es_text_green</item>
		<item name="android:textSize">14dp</item>
		<item name="android:layout_marginRight">@dimen/es_profile_margin_text</item>
		<item name="android:layout_marginTop">@dimen/es_profile_row_margin</item>
		<item name="android:layout_marginBottom">@dimen/es_padding_base</item>
		<item name="android:textStyle">bold</item>
	</style>

	<style name="EmbeddedSocialSdkOptionsHeader.Phone">
		<item name="android:layout_marginLeft">@dimen/es_profile_margin_text</item>
	</style>

	<style name="EmbeddedSocialSdkBottomButton" parent="Widget.AppCompat.Button.Borderless">
		<item name="android:textColor">@color/es_text_green</item>
	</style>

	<style name="EmbeddedSocialSdkSignInButtonsLayout">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">wrap_content</item>
	</style>

	<style name="EmbeddedSocialSdkDivider.List">
		<item name="android:visibility">gone</item>
	</style>

	<style name="EmbeddedSocialSdkTextAddPhotoCaption">
		<item name="android:background">?attr/es_topicCoverBackground</item>
		<item name="android:gravity">center</item>
		<item name="android:textColor">?attr/es_textColorPrimary</item>
		<item name="android:textSize">@dimen/es_text_subhead</item>
	</style>

</resources>
